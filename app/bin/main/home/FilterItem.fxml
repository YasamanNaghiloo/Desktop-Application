<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cookbook.controllers.FilterItemController"
      prefWidth="100"
      prefHeight="32"
      alignment="CENTER"
      style="-fx-effect: dropShadow(three-pass-box, rgba(0,0,0,0.1), 4.0, 0.0, 0.0,4.0);
             -fx-background-radius: 69;
             -fx-background-color: #69325A;">
  <padding>
    <Insets left="6.66" right="5" bottom="1"/>
  </padding>
  <Label fx:id="nameLabel" text="Name" prefWidth="80" textFill="WHITE">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <Button onAction="#deleteFilterItem"
          text="X"
          textFill="WHITE"
          style="-fx-background-color: #828282;
                 -fx-effect: dropShadow(three-pass-box, rgba(0,0,0,0.1), 10.0, 0.0, 0.0, 0.0);
                 -fx-background-radius: 30;">
    <font>
      <Font name="Lucida Bright" size="12.0" />
    </font>
  </Button>
</HBox>
