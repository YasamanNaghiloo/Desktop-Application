<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="unit.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.controllers.FilterController">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <Label text="Add Tags to filter:">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <ComboBox fx:id="tagComboBox" style="-fx-background-color: FA9D83;" />
  <Label text="Add Ingredients to filter:">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <ComboBox fx:id="ingredientsComboBox" style="-fx-background-color: FA9D83;" />
</VBox>
