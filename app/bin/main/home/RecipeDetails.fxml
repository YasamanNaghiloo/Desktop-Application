<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Recipe Details -->
<VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.controllers.RecipeDetailsController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>
  <Label text="Recipe Name">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <TextField fx:id="recipeNameField" editable="false" />
  <Label text="Short Description">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <TextField fx:id="shortDescriptionField" editable="false" prefHeight="40.0" prefWidth="668.0" />
  <Label text="Full Description">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <TextField fx:id="fullDescriptionField" editable="false" prefHeight="121.0" prefWidth="668.0" />
  <Label text="Portion">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <TextField fx:id="portionField" editable="false" />
  <Label text="Ingredients">
    <font>
      <Font name="Lucida Bright" size="14.0" />
    </font>
  </Label>
  <ListView fx:id="ingredientList" editable="false" prefHeight="275.0" prefWidth="668.0" />
  <HBox alignment="TOP_RIGHT" prefHeight="24.0" prefWidth="453.0" spacing="10.0">
    <children>
      <Button mnemonicParsing="false" prefHeight="24.0" prefWidth="135.0" text="Show Comments">
        <font>
          <Font name="Lucida Bright" size="12.0" />
        </font>
      </Button>
      <Button alignment="CENTER" mnemonicParsing="false" prefHeight="24.0" prefWidth="42.0" text="+" HBox.hgrow="ALWAYS">
        <font>
          <Font name="Lucida Bright Demibold" size="12.0" />
        </font>
      </Button>
    </children>
    <VBox.margin>
      <Insets />
    </VBox.margin>
    <padding>
      <Insets top="10.0" />
    </padding>
  </HBox>
</VBox>
<!-- End Recipe Details -->