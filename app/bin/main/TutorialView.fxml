              <Button fx:id="next" onAction="#handleNext" prefHeight="23.0" prefWidth="115.0" style="-fx-background-color: FA9D83; -fx-effect: dropShadow(three-pass-box,rgba(0,0,0,0.1), 5.0, 0.0, 0.0, 5.0);" text="Next" textFill="WHITE">
