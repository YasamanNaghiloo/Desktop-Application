<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="103.0" prefWidth="660.0" style="-fx-background-color: #ffddd3; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.controllers.CommentController">
  <VBox HBox.hgrow="ALWAYS">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="username" text="">
      <font>
        <Font name="Lucida Bright" size="22.0" />
      </font>
    </Label>
    <TextArea fx:id="content" editable="false" style="-fx-border-color: #ffffff;" text="">
      <font>
        <Font name="Lucida Bright" size="15.0" />
      </font>
    </TextArea>
  </VBox>
  <MenuButton fx:id="menu" style="-fx-background-color: transparent;">
    <graphic>
      <ImageView fitHeight="30.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="@../three_dots_menu.png" />
        </image>
      </ImageView>
    </graphic>
      <font>
         <Font name="Lucida Bright Demibold" size="12.0" />
      </font>
  </MenuButton>
</HBox>
